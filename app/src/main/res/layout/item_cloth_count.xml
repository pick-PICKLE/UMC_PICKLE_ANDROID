<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cloth_count"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/cloth_count_item_background">

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14.5dp"
        android:text="/"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="16dp"
        android:src="@drawable/close_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="20.5dp"
        android:padding="3.94dp"
        android:src="@drawable/minus_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_count"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/logout_withdrawal_button_background"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_minus"
        app:layout_constraintStart_toEndOf="@+id/iv_minus"
        app:layout_constraintTop_toTopOf="@+id/iv_minus" />

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="3.94dp"
        android:src="@drawable/plus_outline"
        app:layout_constraintBottom_toBottomOf="@+id/tv_count"
        app:layout_constraintStart_toEndOf="@+id/tv_count"
        app:layout_constraintTop_toTopOf="@+id/tv_count" />


    <TextView
        android:id="@+id/tv_multi_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#1E1E1E"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>