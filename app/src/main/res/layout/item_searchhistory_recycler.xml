<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchhistory_layout_detail"
    android:layout_width="101dp"
    android:layout_height="36dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/searchhistory_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/searchhistory_textview_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="3"
        android:text="검색어"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchhistory_image_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="6.75dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@id/searchhistory_textview_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchhistory_textview_history" />

</androidx.constraintlayout.widget.ConstraintLayout>