<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_layout"
    android:layout_width="match_parent"
    android:layout_height="374dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_textview_all"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="전체"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_textview_outer"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="아우터"
        android:textColor="#A4A4A4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_textview_top"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="상의"
        android:textColor="#A4A4A4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_textview_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="하의"
        android:textColor="#A4A4A4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_textview_onepiece"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="원피스"
        android:textColor="#A4A4A4"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/category_textview_other"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="기타"
        android:textColor="#A4A4A4"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>